@model IEnumerable<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var count = 0;
}

<h3>Ürünler</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Ürün Görseli</th>
        <th>Ürün Adı</th>
        <th>Açıklama</th>
        <th>Fiyat</th>
        <th>Kategori</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {

        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="height:75px; width:75px" /> </td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price ₺</td>
            <td>@item.CategoryName</td>
            <td>
                <a href="/Product/UpdateProuduct/@item.ProductId" class="btn btn-primary btn-sm">Düzenle</a>
                <a href="/Product/DeleteProuduct/@item.ProductId" class="btn btn-danger btn-sm">Sil</a>
            </td>
        </tr>
    }
</table>

<a href="/Product/CreateProuduct" class="btn btn-success">Yeni Ürün Ekle</a>
